                <div class="box1">
                    <img src="/images/Pesquisa.png" height="25px" width="25px">
                    <input type="password" name="password" class="senha-01" value="" placeholder="Digite sua senha" required>
                </div>

                <button class="button-01" type="submit" value="Enviar">Acessar</button>
                <div class="lembrar">
